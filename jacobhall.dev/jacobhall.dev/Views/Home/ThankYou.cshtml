@{
    ViewData["Title"] = "Thank You";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@ViewData["Title"]</h1>

            @if (ViewBag.Message == null)
            {
            <div>
                <p>something went wrong</p>
            </div>
            }

            @if (ViewBag.Message != null)
            {
            <div>
                <p>@ViewBag.Message</p>
            </div>
            }
        </div>
    </div>
</div>

